<%- include("./partials/header") %>


<div class="container mt-5">
    <h3 class="my-3">Compose your Blog here</h3>
    <form action="/edit/<%= blog._id %>" method="POST">
        <input type="text" value="<%= blog.title %>" name="title" placeholder="enter title" class="form-control" required>
        <textarea name="content"  cols="20" rows="10" placeholder="Enter content" class="mt-3 form-control" required><%= blog.content %></textarea>
        <input type="submit" value="Save Changes" class="btn btn-md btn-primary mt-3"  style="margin-bottom: 200px">
    </form>
</div>

<%- include("./partials/footer") %>
